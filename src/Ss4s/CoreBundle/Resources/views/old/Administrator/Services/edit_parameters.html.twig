{% extends '::base.html.twig' %}

{% block title %}
	{{ parent() }} Paramètres de {{ serviceName }}
{% endblock %}

{% block content %}
	<div class="custom-module">
		<div class="custom-module-header">
			<div class="custom-mini-icon">
				<span class="glyphicon glyphicon-edit"></span>
			</div>
			<h3>
				Modifier les paramètres du service "{{ serviceName }}"
			</h3>
		</div>
		<div class="well">
			<form role="form" class="form-horizontal" method="post" {{ form_enctype(form) }}>
				{{ form_start(form) }}
				{{ form_end(form) }}
			</form>
		</div>
	</div>
	{% block script %}
		<script>
			$('form div').addClass('form-group');
			$('label').addClass('col-sm-4 control-label');
			$('input').wrap('<div class="col-sm-6"></div>');
			$('input').addClass('form-control');
			$('form').append('<div class="col-sm-offset-4 col-sm-10"><input type="submit" class="btn btn-success"></div>');
			$('div.well').css('padding-bottom', '50px');
			$('#form_pass_first').attr('type', 'password');
			$('#form_pass_second').attr('type', 'password');
		</script>
	{% endblock %}
{% endblock %}